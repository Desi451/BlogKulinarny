@model CategoryViewModel

@{Layout = "~/Views/Shared/_Panel_Layout.cshtml";}

<div class="container-fluid mt-3">
    <div class="row g-2">
        <div class="col-12">
            <form asp-controller="User" asp-action="CreateCategory" method="post">
                <div class="row">
                    <div class="col-auto p-2 text-truncate">
                        <label class="">Dodaj kategorie:</label>
                    </div>
                    <div class="col">
                        <input type="text" class="form-control" id="newCategory" asp-for="_newCategory">
                    </div>
                    <div class="col-auto">
                        <button type="submit" class="btn btn-success">Dodaj</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="py-2 text-truncate fw-bold" title="Kategoria">
        Dostepne kategorie:
        </div>
        @foreach (var cat in Model._categories)
        {
            @if(cat.isAccepted == true)
            {
            <div class="col-auto">
                <div class="border border-warning border-2 border-primary rounded-3 p-3 shadow bg-light bg-opacity-25">
                    <div class=" text-truncate fw-bold" title="Kategoria">
                        @cat.name
                    </div>
                </div>
            </div>
            }
        }
    </div>
</div>